<!-- views/compose.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compose New Post</title>
    <style>
    /* styles.css */

/* Global styles */
body {
            background-image: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSs2B9uMnwqiygXbabpHqghhDcSNKN1y4zJWg&usqp=CAU");
            object-fit: cover;
            font-family: Arial, sans-serif;
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
        }


.container {
    max-width:40%;
    margin: 30px auto;
    padding: 20px;
}

/* Compose page styles */
h1 {
    text-align: center;
    margin-bottom: 20px;
}

form {
    display: flex;
    
    flex-direction: column;
    align-items: center;
}

input[type="text"],
textarea {
    width: 100%;
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

input[type="file"] {
    margin-bottom: 10px;
}

button[type="submit"] {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
}

button[type="submit"]:hover {
    background-color: #0056b3;
}

/* View page styles */
a {
    display: block;
    text-align: center;
    margin-bottom: 20px;
}

.post {
           background-color: #f9f9f9;
            border-radius: 15px;
            padding: 60px;
            width: 60%;
            margin: 150px;
            margin-left: 250px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            opacity: 0.8;
}

.post h2 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
}

.post p {
    margin-bottom: 10px;
}

.post img {
    width: 100%;
    border-radius: 10px;
    margin-bottom: 10px;
}

.post form {
    text-align: center;
}

.post form button {
    background-color: #dc3545;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 5px;
    cursor: pointer;
}

.post form button:hover {
    background-color: #c82333;
}

    </style>
</head>
<body>
    <h1>Compose New Post</h1>
    <div class="post"> <!-- Corrected class name -->
        <form action="/compose" method="post" enctype="multipart/form-data">
            <input type="text" name="title" placeholder="Title">
            <textarea name="content" placeholder="Content"></textarea>
            <input type="file" name="image" accept="image/*"> <!-- Add input field for image upload -->
            <button type="submit">Publish</button>
        </form>
    </div>
</body>
</html>
